<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-products" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="height: 50px;width:50px" src="/product-images/{{this._id}}.png" alt=""></td>
      <td>
        <a href="/admin/edit-products/{{this._id}}" class="btn btn-primary">Edit</a>
         <a href="/admin/delete-product/{{this._id}}" onclick=" return confirm('Are you sure you want to delete this product{{this.Name}}?')" class="btn btn-danger">Delete</a>
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>